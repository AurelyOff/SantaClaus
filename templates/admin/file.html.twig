
{% extends "base.html.twig" %}

{% block title %}Admin | {{ parent() }}{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col s12 m12 l12">
				<h4>Ajout d'un fichier</h4>
			</div>
		</div>
	</div>
    {{ form_start(form, {'attr': {'class': 'row'}}) }}
	<div class="input-field col s12 m6 l6">
		{{ form_widget(form.name, {'attr': {'placeholder': 'Nom de l\'usine'}}) }}
		{{ form_label(form.name, 'Nom de l\'usine') }}
	</div>

	<div class="input-field col s12 m12 l12">
		{{ form_widget(form.file) }}
	</div>

	<div class="input-field col s12 m12 l12">
		<input type="submit" name="" value="Enregistrer" class="btn btn-primary">
	</div>
{{ form_end(form) }}
{% endblock %}